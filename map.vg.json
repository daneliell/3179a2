{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 350,
  "background": "#f9f7f1",
  "params": [
    {
      "name": "year_selection",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2018,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/daneliell/3179a2/main/gold_reserves_tonnes_clean.csv"
      },
      "transform": [{
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == year_selection"},
        {"filter": "datum.Tonnes > 0"},
        {"calculate": "datum.Tonnes+1", "as": "Gold Reserves (tonnes)"}
      ],
      "layer": [
        {
          "mark": {"type": "geoshape", "stroke": "#FFFFFF", "strokeWidth": 0.5},
          "projection": {
            "type": "equirectangular"
          },
          "encoding": {
            "shape": {
                "field": "geo",
                "type": "geojson"
              },
            "color": {
              "field": "Gold Reserves (tonnes)",
              "type": "quantitative",
              "scale": {
                "type": "log",
                "domainMax": 10000,
                "domainMin": 0.1,
                "range": ["#EEE8AA", "#FFD700", "#D2691E"]
              },
              "title": "Reserves (tonnes)",
              "legend": {
                "cornerRadius": 10,
                "fillColor": "#fde6e6",
                "padding": 15,
                "strokeColor": "#2f2f2f",
                "gradientLength": 200
              }
            },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": "Gold Reserves (tonnes)", "type": "quantitative", "format": "0.2f"},
              {"field": "Year", "type": "nominal"}
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "baseline": "middle",
            "fontSize": 13,
            "font": "Arial"
          },
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {"url": "https://raw.githubusercontent.com/daneliell/3179a2/main/latlong.csv"},
                "key": "Country",
                "fields": ["Latitude", "Longitude"]
              }
            }
          ],
          "encoding": {
            "text": {"field": "Country", "type": "nominal"},
            "longitude": {"field": "Longitude", "type": "quantitative"},
            "latitude": {"field": "Latitude", "type": "quantitative"},
            "opacity": {
              "condition": {
                "test": "datum.Country == 'China'|| datum.Country == 'Italy'|| datum.Country == 'India'|| datum.Country == 'Australia' || datum.Country == 'Russia' || datum.Country == 'United States of America' || datum.Country == 'Brazil'",
                "value": 1
              },
              "value": 0
            },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": "Gold Reserves (tonnes)", "type": "quantitative", "format": "0.2f"},
              {"field": "Year", "type": "nominal"}
            ]
          }
        }
      ]
    }
  ],
  "config": {
    "view": {
       "stroke": "transparent"
    }
  }
}
