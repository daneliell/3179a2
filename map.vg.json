{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 350,
  "background": "#f9f7f1",
  "params": [
    {
      "name": "year_selection",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2018,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/daneliell/3179a2/main/gold_reserves_2000.csv"
      },
      "transform": [{
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == year_selection"},
        {"calculate": "datum.Value", "as": "Gold Reserves in USD"},
        {"calculate": "datum.Value/1000000000", "as": "Reserves in Billions USD"}
      ],
      "layer": [
        {
          "mark": {"type": "geoshape", "stroke": "#FFFFFF", "strokeWidth": 0.5},
          "projection": {
            "type": "equirectangular"
          },
          "encoding": {
            "shape": {
                "field": "geo",
                "type": "geojson"
              },
            "color": {
              "field": "Gold Reserves in USD",
              "type": "quantitative",
              "scale": {
                "type": "log",
                "domainMax": 1000000000000,
                "domainMin": 1000000,
                "range": ["#EEE8AA", "#FFD700", "#D2691E"]
              },
              "legend": {
                "cornerRadius": 10,
                "fillColor": "#fde6e6",
                "padding": 15,
                "strokeColor": "#2f2f2f",
                "gradientLength": 300
              }
            },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {"field": "Reserves in Billions USD", "type": "quantitative", "format": "0.1f"},
              {"field": "Year", "type": "nominal"}
            ]
          }
        }
      ]
    }
  ],
  "config": {
    "view": {
       "stroke": "transparent"
    }
  }
}
